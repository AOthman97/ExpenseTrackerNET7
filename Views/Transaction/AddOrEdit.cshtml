@model ExpenseTrackerNET7.Models.Transaction

@{
    ViewData["Title"] = Model.Id == 0 ? "Create a New Transaction" : "Edit Transaction";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    Category:
                    @*<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>*@
                    <ejs-dropdownlist id="Categories" ejs-for="CategoryId"
                    dataSource="@ViewBag.CategoryList" placeholder="Category" 
                    floatLabelType="Always" allowFiltering="true">
                    <e-dropdownlist-fields value="Id" text="TitleWithIcon"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                </div>
                <div class="form-group mb-3">
                    <ejs-numerictextbox placeholder="Amount" floatLabelType="Auto" id="Amount" value="0.00" Type="text" min="0" max="1500"></ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <ejs-textbox id="Note" ejs-for="@Model.Note" placeholder="Note" floatLabelType="Auto" multiline="true"></ejs-textbox>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <ejs-datepicker id="datepicker" ejs-for="@Model.TransactionDate" placeholder="Date" 
                    floatLabelType="Always" format="dd/MM/yyyy"></ejs-datepicker>
                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <ejs-button id="outline" cssClass="e-success" content="Submit" type="submit"></ejs-button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-10x"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
